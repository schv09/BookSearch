<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text_view"
            style="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:text="Akajsdhfkaj Gajksdhfkajs Hasdf Haskdfjak Hkasdfkajljfjfjf" />

        <TextView
            android:id="@+id/author_text_view"
            style="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="Ajalkdsjfaksdjf lskjdflkajsd fkajsdflaskdjf lkasd jflaksj dflkjalskjfl k sdjf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_grade_gold_18dp" />

            <TextView
                android:id="@+id/rating_text_view"
                style="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="5.0" />

            <TextView
                android:id="@+id/ratings_count_text_view"
                style="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="(100)" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>